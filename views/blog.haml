%div#blog.clear.push-6.span-12
  - @page.each do |post|
    %div.post.push-2
      = haml :_blog_post, :layout => false, :locals => { :post => post }
    %hr

  - if @page.prev?
    %a{ :href => "/blog/#{@page.prev.number}" } Previous page
  - if @page.next?
    %a{ :href => "/blog/#{@page.next.number}", :style => "float:right" } Next page